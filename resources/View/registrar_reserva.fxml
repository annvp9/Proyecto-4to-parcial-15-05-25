<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="controllers.RegistrarReservaController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="ID Cliente:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="txtIdCliente" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Label text="ID Espacio:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="txtIdEspacio" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Label text="ID Tarifa:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="txtIdTarifa" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Label text="Inicio (AAAA-MM-DDTHH:MM):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="txtInicio" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Label text="Fin (AAAA-MM-DDTHH:MM):" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField fx:id="txtFin" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <Label text="Estado:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <TextField fx:id="txtEstado" GridPane.rowIndex="5" GridPane.columnIndex="1" />
    <Button text="Registrar" onAction="#registrarReserva" GridPane.rowIndex="6" GridPane.columnIndex="1" />
    <Label fx:id="lblMensaje" GridPane.rowIndex="7" GridPane.columnIndex="1" />
</GridPane>

