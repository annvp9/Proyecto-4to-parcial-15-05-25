<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="controllers.RegistrarClienteController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Label text="Apellido:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="txtApellido" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Label text="Correo:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="txtCorreo" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Label text="Teléfono:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="txtTelefono" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Label text="Dirección:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField fx:id="txtDireccion" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <Button text="Registrar" onAction="#registrarCliente" GridPane.rowIndex="5" GridPane.columnIndex="1" />
    <Label fx:id="lblMensaje" GridPane.rowIndex="6" GridPane.columnIndex="1" />
</GridPane>
