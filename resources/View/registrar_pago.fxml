<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.RegistrarPagoController"
      spacing="10" alignment="center"
      prefWidth="400" prefHeight="450"
>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Registrar Pago" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="ID Reserva:"/>
    <TextField fx:id="txtIdReserva" promptText="Ingrese el ID de la reserva"/>

    <Label text="Monto:"/>
    <TextField fx:id="txtMonto" promptText="Ingrese el monto"/>

    <Label text="Método de pago:"/>
    <TextField fx:id="txtMetodoPago" promptText="Ej. Tarjeta, Efectivo"/>

    <Label text="ID Empleado:"/>
    <TextField fx:id="txtIdEmpleado" promptText="Ingrese el ID del empleado"/>

    <Label text="Fecha de pago:"/>
    <DatePicker fx:id="dateFechaPago"/>

    <Button text="Registrar Pago" onAction="#registrarPago" prefWidth="200"/>
    <Button text="Volver al menú" onAction="#volverAlMenu" prefWidth="200"/>

</VBox>
