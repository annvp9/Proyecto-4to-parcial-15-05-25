<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.VerPagosController" spacing="10" alignment="center" prefWidth="700" prefHeight="400">
    <TableView fx:id="tablePagos" prefWidth="680" prefHeight="350">
        <columns>
            <TableColumn fx:id="colIdPago" text="ID Pago" prefWidth="80" />
            <TableColumn fx:id="colIdReserva" text="ID Reserva" prefWidth="100" />
            <TableColumn fx:id="colMonto" text="Monto" prefWidth="120" />
            <TableColumn fx:id="colMetodoPago" text="Método Pago" prefWidth="150" />
            <TableColumn fx:id="colFechaPago" text="Fecha Pago" prefWidth="150" />
        </columns>
    </TableView>
    <Button text="Menú Principal" onAction="#volverAlMenu" prefWidth="200"/>
</VBox>

